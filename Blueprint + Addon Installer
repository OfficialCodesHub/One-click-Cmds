#!/usr/bin/env bash
# ====================================================
#   üöÄ AyushTheWarrior - Blueprint+Addon+Theme Installer
# ====================================================

set -u

# --- ANSI COLORS ---
C=$'\033[36m'  # Cyan
G=$'\033[32m'  # Green
R=$'\033[31m'  # Red
B=$'\033[34m'  # Blue
Y=$'\033[33m'  # Yellow
W=$'\033[97m'  # White
N=$'\033[0m'   # Reset

# --- HEADER FUNCTION ---
header() {
    clear
    echo -e "${B}  __  __                        ${N}"
    echo -e "${B} |  \/  | ___ _ __  _   _       ${N}"
    echo -e "${B} | |\/| |/ _ \ '_ \| | | |      ${N}"
    echo -e "${B} | |  | |  __/ | | | |_| |      ${N}"
    echo -e "${B} |_|  |_|\___|_| |_|\__,_|      ${N}"
    echo -e "${B}=====================================================${N}"
    echo -e "${Y}      üöÄ Subscribe To AyushTheWarrior      ${N}"
    echo -e "${B}=====================================================${N}"
    echo ""
}

# --- PAUSE FUNCTION ---
pause() {
    echo ""
    read -p "${W}Press [Enter] to return to menu...${N}" dummy
}

# --- MAIN LOOP ---
while true; do
    header
    echo -e "${C} 1) ${W}BLUEPRINT INSTALLER ${G}(Working in AnyVPS)${N}"
    echo -e "${C} 2) ${W}ADDON INSTALLER ${G}(Worked With SFTP)${N}"
    echo -e "${C} 3) ${W}ADDON+THEME INSTALLER ${G}(Without SFTP)${N}"
    echo -e "${R} 3) Exit${N}"
    echo ""
    echo -e "${B}=====================================================${N}"
    read -p "${Y}üëâ Select an option [1-3]: ${N}" choice

    case $choice in
        1)
            echo ""
            echo -e "${Y}üñ•Ô∏è  Installing Blueprint${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/main/blueprint-installer.sh)
            echo ""
            pause
            ;;
        2)
            echo ""
            echo -e "${Y}üñ•Ô∏è  Installing Addon${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/main/addon-installer.sh)
            echo ""
            pause
            ;;
        3)
            echo ""
            echo -e "${Y}üñ•Ô∏è  Installing Addon+Theme${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/jaare-kutriya/refs/heads/main/Ptero-addons)
            echo ""
            pause
            ;;
        4)
            echo ""
            echo -e "${G}üëã Exiting... Thanks for using!${N}"
            exit 0
            ;;
        *)
            echo ""
            echo -e "${R}‚ùå Invalid Option! Please select between 1-4.${N}"
            sleep 2
            ;;
    esac
done
EOF
