set -u

# --- ANSI COLORS ---
C=$'\033[36m'  # Cyan
G=$'\033[32m'  # Green
R=$'\033[31m'  # Red
B=$'\033[34m'  # Blue
Y=$'\033[33m'  # Yellow
W=$'\033[97m'  # White
N=$'\033[0m'   # Reset

# --- HEADER FUNCTION ---
header() {
    clear
    echo -e "${B}  __  __       _         __  __                  ${N}"
    echo -e "${B} |  \/  | __ _(_)_ __   |  \/  | ___ _ __  _   _ ${N}"
    echo -e "${B} | |\/| |/ _\` | | '_ \  | |\/| |/ _ \ '_ \| | | |${N}"
    echo -e "${B} | |  | | (_| | | | | | | |  | |  __/ | | | |_| |${N}"
    echo -e "${B} |_|  |_|\__,_|_|_| |_| |_|  |_|\___|_| |_|\__,_|${N}"
    echo -e "${B}=====================================================${N}"
    echo -e "${Y}      ðŸš€ Subscribe To AyushTheWarrior      ${N}"
    echo -e "${B}=====================================================${N}"
    echo ""
}

# --- PAUSE FUNCTION ---
pause() {
    echo ""
    read -p "${W}Press [Enter] to return to menu...${N}" dummy
}

# --- MAIN LOOP ---
while true; do
    header
    echo -e "${C} 1) ${W}Discord Server Link${N}"
    echo -e "${C} 2) ${W}YouTube Channel Link${N}"
    echo -e "${C} 3) ${W}VM Installer ${G}(IDX VPS)${N}"
    echo -e "${C} 4) ${W}Pterodactyl Panel + Wings Installer ${G}(Pterodactyl Setup)${N}"
    echo -e "${C} 5) ${W}Pterodactyl Blueprint Installer ${G}(Pterodactyl Blueprint)${N}"
    echo -e "${C} 6) ${W}Pterodactyl Addon Installer ${G}(Pterodactyl Addon)${N}"
    echo -e "${C} 7) ${W}RDP Installer ${G}(Desktop Environment)${N}"
    echo -e "${C} 8) ${W}Tailscale Installer ${G}(VPN)${N}"
    echo -e "${R} 9) Exit${N}"
    echo ""
    echo -e "${B}=====================================================${N}"
    read -p "${Y}ðŸ‘‰ Select an option [1-10]: ${N}" choice

    case $choice in
        1)
            echo ""
            echo -e "${B}ðŸ“¢ Join our Discord Server:${N}"
            echo -e "${G}ðŸ”— https://discord.gg/kypp9pXYpN${N}"
            echo ""
            pause
            ;;
        2)
            echo ""
            echo -e "${R}ðŸ“º Subscribe to YouTube:${N}"
            echo -e "${Y}ðŸ”— https://www.youtube.com/@OffficialAyushTheWarrior${N}"
            echo ""
            pause
            ;;
        3)
            echo ""
            echo -e "${Y}ðŸ’» Installing VM (IDX VPS)...${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/refs/heads/main/IDX%20VM)
            pause
            ;;
       4)
            echo ""
            echo -e "${Y}ðŸŒ Installing Pterodactyl panel + wings...${N}"
            bash <(curl -s https://pterodactyl-installer.se)
            pause
            ;;
       5)
            echo ""
            echo -e "${Y}ðŸ–¥ï¸  Installing Blueprint${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/main/Blueprint)
            pause
            ;;
       6)
            echo ""
            echo -e "${Y}ðŸ–¥ï¸  Installing Addon${N}"
            bash <(curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/main/Addons)
            pause
            ;;
       7)
            echo ""
            echo -e "${Y}ðŸ–¥ï¸  Installing RDP...${N}"
            curl -fsSL https://raw.githubusercontent.com/OfficialCodesHub/One-click-Cmds/main/rdp | sed 's/\r$//' | bash
            pause
            ;;
        8)
            echo ""
            echo -e "${Y}ðŸŒ Installing Tailscale VPN...${N}"
            curl -fsSL https://tailscale.com/install.sh | sh
            pause
            ;;
        9)
            echo ""
            echo -e "${G}ðŸ‘‹ Exiting... Thanks for using!${N}"
            exit 0
            ;;
        *)
            echo ""
            echo -e "${R}âŒ Invalid Option! Please select between 1-10.${N}"
            sleep 2
            ;;
    esac
done
EOF
